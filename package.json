{
  "name": "erc20-interaction-app",
  "version": "1.0.0",
  "main": "dist/server.js",
  "type": "module",
  "license": "MIT",
  "packageManager": "yarn@1.22.22",
  "private": true,
  "scripts": {
    "dev": "node --no-warnings -r dotenv/config --loader ts-node/esm -C ts-patch/compiler src/server.ts dotenv_config_path=.env",
    "build": "tspc",
    "start": "node dist/src/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "postinstall": "ts-patch install -s",
    "test:contracts": "hardhat test contracts/ERC20.test.ts",
    "test:contracts:nowarnings": "ESLINT_NO_DEV_ERRORS=true hardhat test contracts/ERC20.test.ts",
    "deploy:local": "hardhat run scripts/deploy-local.cjs --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.cjs --network sepolia",
    "node:local": "hardhat node"
  },
  "dependencies": {
    "@sinclair/typebox": "0.34.33",
    "convict": "6.2.4",
    "dotenv": "16.4.7",
    "ethers": "6.13.5",
    "fastify": "5.2.2",
    "pino": "9.6.0",
    "pino-pretty": "13.0.0",
    "viem": "2.25.0"
  },
  "devDependencies": {
    "@fastify/cors": "11.0.1",
    "@fastify/sensible": "6.0.3",
    "@nomicfoundation/hardhat-chai-matchers": "2.0.8",
    "@nomicfoundation/hardhat-ethers": "3.0.8",
    "@nomicfoundation/hardhat-ignition": "0.15.10",
    "@nomicfoundation/hardhat-ignition-ethers": "0.15.10",
    "@nomicfoundation/hardhat-network-helpers": "1.0.12",
    "@nomicfoundation/hardhat-toolbox": "5.0.0",
    "@nomicfoundation/hardhat-verify": "2.0.13",
    "@nomicfoundation/ignition-core": "0.15.10",
    "@typechain/ethers-v6": "0.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/chai": "5.2.1",
    "@types/convict": "6.1.6",
    "@types/jest": "29.5.14",
    "@types/mocha": "10.0.10",
    "@types/node": "22.14.0",
    "@typescript-eslint/eslint-plugin": "8.29.0",
    "@typescript-eslint/parser": "8.29.0",
    "chai": "5.2.0",
    "chai-as-promised": "^8.0.1",
    "eslint": "9.23.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-import-resolver-typescript": "4.3.1",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-prettier": "5.2.6",
    "globals": "16.0.0",
    "hardhat": "2.22.19",
    "hardhat-gas-reporter": "2.2.2",
    "jest": "29.7.0",
    "jest-extended": "4.0.2",
    "prettier": "3.5.3",
    "solidity-coverage": "0.8.14",
    "ts-jest": "29.3.1",
    "ts-node": "10.9.2",
    "ts-patch": "3.3.0",
    "typechain": "8.3.2",
    "typescript": "5.8.2",
    "typescript-transform-paths": "3.5.5"
  }
}
